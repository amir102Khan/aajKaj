<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id="@+id/layout_rv_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="10dp"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="@dimen/_10sdp"
        android:background="@drawable/dotted_adapter_design"
        android:padding ="2dp">
        <LinearLayout
            android:layout_marginStart="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/_3sdp">
            <androidx.cardview.widget.CardView
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_50sdp"
                app:civ_border_color="@color/black"
                app:cardCornerRadius="@dimen/_15sdp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_gravity="center_vertical">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/projectImageUpcmng"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/lay"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tvRvProjectNameUpcmg"
                    android:textColor="@color/black"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:text="Project Name"
                    android:textSize="@dimen/_14sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:id="@+id/tvRvLocationUpcmg"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginStart="@dimen/_20sdp"
                    android:layout_gravity="center_vertical"
                    android:text="Location"
                    android:paddingBottom="5dp"
                    android:layout_width="@dimen/_160sdp"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_alignParentEnd="true"
            android:layout_marginTop="@dimen/_11sdp"
            android:id="@+id/tvRvContactUpcmg"
            android:textColor="@color/olive"
            android:text="Contact"
            android:textAlignment="center"
            android:textSize="@dimen/_12sdp"
            android:paddingBottom="5dp"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/tvRvContactUpcmg"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="0dp"
            android:id="@+id/tvRvDateUpcmg"
            android:textColor="@color/grey"
            android:text="Date"
            android:textAlignment="center"
            android:textSize="@dimen/_11sdp"
            android:layout_width="@dimen/_90sdp"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</layout>